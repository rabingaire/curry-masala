<div class="container mg-tp-50 mg-bt-50">
  <div class="row">
    <div class="col s12 m6 card">
      <div class="center-align color-three-text">
        <h4> Sign up </h4>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>push-m3
        <%= devise_error_messages! %>

        <div class="input-field col s12">
          <%= f.text_field :name, autofocus: true %>
          <%= f.label :'Full Name' %><br />
        </div>

        <div class="input-field col s12">
          <%= f.email_field :email, autofocus: true %>
          <%= f.label :email %><br />
        </div>

        <div class="input-field col s12">
         
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.label :password %>
           <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>

        <div class="input-field col s12">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <%= f.label :password_confirmation %><br />
        </div>

        <div class="input-field col s12">
          <%= f.submit "Sign up",  :class => 'btn waves-effect waves-light color-three-background' %>
        </div>
      <% end %>
      <div class="input-field col s12">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>